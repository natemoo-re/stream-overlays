---
import Grid from '../components/grid.astro';
import Grain from '../components/grain.astro';
import Bar from '../components/bar.astro';
import '../main.css';
---
<html lang="en">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width" />
		<title>Astro</title>
		<style>
			main {
				display: flex;
				flex-direction: row;
				align-items: center;
				padding: calc(var(--gap) * 2);
				gap: var(--gap);
				height: max-content;
				margin: auto;
			}
			main > div {
				display: flex;
				flex-direction: column;
			}
			h1 {
				font-family: "MD Nichrome Test Ultra";
				font-size: 15vw;
				-webkit-background-clip: text;
				-webkit-text-fill-color: transparent;
				line-height: 0.9;
			}
			h3 {
				font-size: 5vw;
				color: var(--night);
				font-family: MDNichromeTest-Bold;
			}
			#countdown {
				color: var(--sage);
				font-size: 40vw;
				font-family: "Inter", sans-serif;
				font-variant-numeric: tabular-nums;
				font-weight: 100;
				line-height: 100vh;
				z-index: -1;
				position: fixed;
				top: 0;
				bottom: 0;
				right: 0;
				margin: auto 0;
				transform: translate(-1.5vw, 1.5vw);
			}
		</style>
	</head>
	<body>
		<Grain />
		<Bar />
		<main>
			<div>
				<h3>nmoo.dev</h3>
				<h1 class="gradient">Starting soon&hellip;</h1>
			</div>
			<div>
				<span id="countdown">60</span>
			</div>
		</main>
		<Grid />

		<script>
			import '../scripts/countdown.ts';
		</script>
	</body>
</html>
