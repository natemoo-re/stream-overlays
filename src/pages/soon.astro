---
import Grid from '../components/grid.astro';
import Grain from '../components/grain.astro';
import Bar from '../components/bar.astro';
import '../main.css';
---
<html lang="en">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width" />
		<title>Astro</title>
		<style>
			:root {
				--speed: 15s;
			}
			main {
				display: flex;
				flex-direction: row;
				align-items: center;
				padding: var(--gap);
				gap: var(--gap);
				height: max-content;
				margin: auto;
			}
			main > div {
				display: flex;
				flex-direction: column;
			}
			h1 {
				font: inherit;
				-webkit-background-clip: text;
				-webkit-text-fill-color: transparent;
			}
			.x {
				position: fixed;
				width: 100%;
				height: 100%;
				inset: 0;
				animation: x var(--speed) linear infinite alternate;
				
				font-family: var(--font-display);
				font-size: 15vw;
				line-height: 0.9;
			}
			.y {
				position: fixed;
				width: 100%;
				height: 100%;
				inset: 0;
				animation: y calc(var(--speed) * 1.44) linear infinite alternate;
			}
			#soon {
				font-size: 33vw;
				font-family: "Inter", sans-serif;
				font-variant-numeric: tabular-nums;
				font-weight: 100;
				margin-top: 10vw;
				text-align: center;
				z-index: 0;
				position: fixed;
				inset: 0;
				color: var(--sage);
				opacity: 0.5;
				-webkit-mask-image: linear-gradient(to bottom, black, black 33vh, transparent, transparent);
			}
		</style>
	</head>
	<body>
		<Grain />
		<Bar />
		<h2 id="soon">SOON</h2>
		<main>
			<div class="x">
				<div class="y">
					<h1 class="gradient">nmoo.dev</h1>
				</div>
			</div>
		</main>
		<Grid />
	</body>
</html>
